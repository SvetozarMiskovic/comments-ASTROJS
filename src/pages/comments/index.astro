---
import ComponentsListHeader from "../../components/CommentsListHeader.astro";
import ComponentsListBody from "../../components/ComponentsListBody.astro";
import Layout from "../../layouts/Layout.astro";

const res = await fetch("http://localhost:4321/api/comments", {
    method: 'GET',
    
})

const { data } = await res.json()

---

<Layout title="All comments listed">
    <ComponentsListHeader/>
    <ComponentsListBody comments={data}/>
</Layout>