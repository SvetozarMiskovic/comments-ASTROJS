---
import HambButton from "./HambButton"

---
    <header class="flex  w-full bg-emerald-800 relative">
      <div class="flex max-w-7xl mx-auto justify-between items-center w-full max-md:justify-between">
        <a href="/" class="flex items-center gap-x-2">
          <img
            src="/logo.png"
            width={70}
            height={70}
            alt="Heartbeat icon"
            class="rounded-2xl p-2"
          />
          <h2 class="font-bold text-xl text-white">Comments Page</h2>
        </a>
      
        <HambButton client:load/>
        <ul class="flex gap-x-8 max-md:hidden px-8">
     
          <li>
            <a href="/comments" class="text-white font-bold text-lg ">
              Comments
            </a>
          </li>
        </ul>
      </div>
    </header>
  
